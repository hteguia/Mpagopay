{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MpagopayConnectionString": "Data Source=DB_HOST;Initial Catalog=DB_NAME;Integrated Security=true;",
    "MpagopayIdentityConnectioString": "Data Source=DB_HOST;Initial Catalog=DB_NAME;Integrated Security=true;"
  },
  "BrevoEmailSettings": {
    "Url": "Url",
    "ApiKey": "ApiKey",
    "SenderEmail": "SenderEmail",
    "SenderName": "SenderName"
  },
  "EmailSettings": {
    "FromAddress": "FromAddress",
    "ApiKey": "ApiKey",
    "FromName": "FromName"
  },
  "SmsSettings": {
    "ApiUrl": "ApiUrl",
    "ApiKey": "ApiKey",
    "SenderName": "SenderName"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occured while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".logs/logs-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "JwtSettings": {
    "Key": "KJKLJ4KL34JL3KJ4L3KJ4L3KJ4L3K4JL",
    "Issuer": "MpagopayIdentity",
    "Audience": "MpagopayIdentity",
    "DurationInMinutes": 60
  },
  "AllowedHosts": "*"
}
